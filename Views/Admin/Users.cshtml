@using Microsoft.AspNetCore.Identity
@using CAT.AID.Web.Models
@inject UserManager<ApplicationUser> UserManager
@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Users Management";
}

<h2 class="mt-3">Users Management</h2>

<a class="btn btn-primary mb-3" href="/Admin/Create">➕ Create New User</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>FullName</th>
            <th>Email</th>
            <th>Location</th>
            <th>Roles</th>
            <th>Status</th>
            <th style="width: 240px">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            var roles = await UserManager.GetRolesAsync(u);
            <tr>
                <td>@u.FullName</td>
                <td>@u.Email</td>
                <td>@u.Location</td>
                <td>@string.Join(", ", roles)</td>
                <td>
                    @if (u.LockoutEnd != null && u.LockoutEnd > DateTime.UtcNow)
                    {
                        <span class="text-primary fw-bold fw-bold">Locked</span>
                    }
                    else
                    {
                        <span class="text-success fw-bold">Active</span>
                    }
                </td>
                <td>
                    <a href="/Admin/Edit/@u.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a href="/Admin/Delete/@u.Id" class="btn btn-sm btn-danger"
                       onclick="return confirm('Are you sure you want to delete this user?');">
                        Delete
                    </a>
                    @if (u.LockoutEnd == null)
                    {
                        <a href="/Admin/Lock/@u.Id" class="btn btn-sm btn-secondary">Lock</a>
                    }
                    else
                    {
                        <a href="/Admin/Unlock/@u.Id" class="btn btn-sm btn-success">Unlock</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
