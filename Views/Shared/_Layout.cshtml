@using Microsoft.AspNetCore.Identity
@using CAT.AID.Web.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>CVAT – Comprehensive Vocational Assessment Tool</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background: linear-gradient(45deg,#999, #999);
            margin: 0;
        }

        /* 🔥 Gradient Poster Header */
        .brand-header {
            background: linear-gradient(90deg,#4b3504, #999 );
            padding: 18px 0;
        }

        .brand-title {
            font-size: 26px;
            font-weight: 800;
            color: white;
            text-transform: uppercase;
            line-height: 32px;
        }

        /* Blue Menu Bar */
        .navbar {
            background: #999;
        }

            .navbar .nav-link,
            .navbar .dropdown-item {
                color: #fff !important;
                font-weight: 100;
                font-size: 15px;
            }

            .navbar .dropdown-menu {
                background: #4b3504;
            }

            .navbar .dropdown-item:hover {
                background: #ffdb69;
            }

        /* Footer */
        .footer {
            background: #4b3504;
            color: #fff;
            padding: 25px;
            text-align: center;
            margin-top: 70px;
            font-size: 15px;
            font-weight: 500;
        }

        .content-wrapper {
            margin-top: 25px;
            margin-bottom: 40px;
        }
    </style>
</head>
<body>

    <!-- 🔥 Gradient Header -->
    <div class="brand-header">
        <div class="container d-flex justify-content-between align-items-center">
            <img src="/images/202409121913074416.png" height="90" />
            <div class="brand-title">
                CVAT – Comprehensive Vocational Assessment Tool<br />
                <small style="font-size:14px; font-weight:400;">
                    A Digital Platform for Vocational Evaluation, Skill Assessment & Career Planning
                </small>
            </div>
            <img src="/images/20240912282747915.png" height="90" />
        </div>
    </div>

    <!-- 🔵 Navigation -->
    <nav class="navbar navbar-expand-lg shadow-sm" style="background:#003366;">
        <div class="container">
            <button class="navbar-toggler bg-light" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav me-auto gap-2">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item"><a class="nav-link text-warning fw-bold" href="/Admin/Users">📚 Users</a></li>
                        }
                        @if (User.IsInRole("LeadAssessor"))
                        {
                            <li class="nav-item"><a class="nav-link text-warning fw-bold" href="/Candidates">📚 Candidates</a></li>
                            <li class="nav-item"><a class="nav-link text-warning fw-bold" href="/Assessments/ReviewQueue">📚 Review Queue</a></li>
                        }
                        @if (User.IsInRole("Assessor"))
                        {
                            <li class="nav-item"><a class="nav-link text-warning fw-bold" href="/Assessments/MyTasks">📚 My Assessments</a></li>
                        }

                        @if (User.IsInRole("Admin") || User.IsInRole("LeadAssessor"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-warning fw-bold" href="/QuestionBank">📚 Question Bank</a>
                            </li>
                        }


                        <li class="nav-item dropdown">
                            <a class="nav-link text-warning fw-bold" data-bs-toggle="dropdown">Support</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/Support/FAQ">FAQs</a></li>
                                <li><a class="dropdown-item" href="/Support/Help">Help</a></li>
                                <li><a class="dropdown-item" href="/Support/Contact">Contact</a></li>
                            </ul>
                        </li>
                    }
                </ul>

                <ul class="navbar-nav ms-auto">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown"> 👤 @User.Identity?.Name </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item text-primary fw-bold">Logout</button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                           
                        </li>
                    }
                </ul>

            </div>
        </div>
    </nav>

    <div class="container content-wrapper">
        @RenderBody()
    </div>

    <div class="footer">
        NATIONAL INSTITUTE FOR THE EMPOWERMENT OF PERSONS WITH INTELLECTUAL DISABILITIES (NIEPID) <br />
        Manovikas Nagar, Secunderabad, Telangana – 500009
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
